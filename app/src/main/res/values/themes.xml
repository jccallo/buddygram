<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Buddygram" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/morado</item>
        <item name="colorPrimaryVariant">@color/morado_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/naranja</item>
        <item name="colorSecondaryVariant">@color/naranja_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- damos estilos a nuestro toolbar -->
    <style name="Widget.Buddygram.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/morado</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>
    <style name="Widget.Buddygram.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Buddygram.TextInputLayout.HintText</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="TextAppearance.Buddygram.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="TextAppearance.Buddygram.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/violeta</item>
        <item name="android:textSize">25sp</item>
    </style>
</resources>